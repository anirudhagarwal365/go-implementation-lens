{
  "name": "go-interface-lens",
  "displayName": "Go Interface Lens",
  "description": "Shows interface implementations in Go code with gutter icons and clickable CodeLens",
  "version": "0.0.1",
  "publisher": "go-interface-lens",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "go",
    "golang",
    "interface",
    "codelens",
    "implementation"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Go Interface Lens",
      "properties": {
        "goInterfaceLens.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Go interface lens"
        },
        "goInterfaceLens.showOnInterfaces": {
          "type": "boolean",
          "default": true,
          "description": "Show implementations on interface definitions"
        },
        "goInterfaceLens.showOnTypes": {
          "type": "boolean",
          "default": true,
          "description": "Show implemented interfaces on type definitions"
        },
        "goInterfaceLens.showOnInterfaceHeader": {
          "type": "boolean",
          "default": false,
          "description": "Show total implementations on interface header (in addition to per-method)"
        },
        "goInterfaceLens.showGutterIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show interface/implementation icons in the gutter"
        }
      }
    },
    "commands": [
      {
        "command": "goInterfaceLens.toggleCodeLens",
        "title": "Go: Toggle Interface CodeLens"
      },
      {
        "command": "goInterfaceLens.toggleGutterIcons",
        "title": "Go: Toggle Interface Gutter Icons"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.5",
    "@types/vscode": "^1.101.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.8.3"
  }
}
